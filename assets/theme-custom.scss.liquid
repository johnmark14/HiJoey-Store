.cart-caption { 
  font-size: 12px;
  line-height: 16px;
}

@media screen and (max-width: 800px) {
  .how-to__text {
    grid-template-columns: 1fr;
    justify-items: center;
    grid-gap: 0;
  }

}

@media screen and (max-width: 600px) {

  .faq-acc__btn h4 {
    font-size: 14px !important;
  }

  .faq-acc__btn h4::after {
    width: 12px;
    height: 12px;
    background-size: 12px;
  }

  .faq-acc__container .panel p {
    font-size: 12px !important;
  }

  .how-to__container {
    grid-template-columns: 1fr;
    grid-template-rows: repeat(3, auto);
    grid-gap: 60px;
  }

  .how-to__text {
    grid-template-columns: 1fr;
    justify-items: center;
    align-self: center;
    grid-gap: 30px;
    margin: 30px 0;
  }

}

@media screen and (max-width: 540px) { 

  .close-button {
    font-size: .9em !important;
  }

  .modal-content { 
    width: 24em;
    padding: 2em 2em;
  }

  h2#product-title {
    font-size: 1.4em !important;
  }

  input#emailContact {
    font-size: .9em !important; 
    padding: .5em;
  }

  input#btn-notify {
    font-size: .8em !important;
    padding: .7em;
  }
  

  .modal-content p {
    font-size: 0.9em !important;
  }

  .alert {
      padding: .5em 1em; 
  }

  span.alert-message {
    font-size: .8em !important;
  }

}



  