.qty-alert {
  background-color: #f7f7f7;
  padding: 12px 0;
  margin: 12px 0;
}

//modal for out of stock
.modal {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, .35);
    opacity: 0;
    visibility: hidden;
    transform: scale(1.1); 
    transition: visibility 0s linear 0.25s, opacity 0.25s 0s, transform 0.25s;
    z-index: 1000;
  }
  
  .modal-content { 
    position:absolute;
    top: 45%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: white;
    padding: 2em 3em;
    width: 33em;
    border-radius: 8px;
    text-align: left;
  }
  
  .close-button {
    position: absolute;
    top:10%;
    right:5%;
    width: 1.5em;
    line-height: 1.5em;
    text-align: center;
    cursor: pointer;
    border-radius: 0.24em;
    background-color: lightgray;
  }
  
  .close-button:hover {
    background-color: darkgray;
  }
  
  .show-modal {
    opacity: 1;
    visibility: visible;
    transform: scale(1.0);
    transition: visibility 0s linear 0s, opacity 0.25s 0s, transform 0.25s;
  }
  
  .modal-container {
    position: relative;
  }
  
  .input-email {
    border: 1px solid lightgray;
    width: 100%;
  }
  
  .alert {
    width: 100%;
    color: #46AA2F;
    margin-top: .5em;
    background-color: #D3EFCD;
    border-left: 5px solid #46AA2F;
    padding: .5em 1em;
    opacity: 0;
    visibility: hidden;
    position: absolute;
    bottom: 1%; 
  } 
  
  .show-alert {
    opacity: 1;
    visibility: visible;
  }
  
  .hide-btn-notify {
    opacity: 0;
    visibility: hidden;
  }
    
  .alert-close {
    text-decoration: underline;
    cursor: pointer;
    color: #46AA2F;
  }
  
  #btn-notify {
    background-color: #1b1f23;
  }