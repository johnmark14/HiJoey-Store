
.qty-alert {
  position: relative;
  background-color: #f7f7f7;
  padding: 12px 0;
  margin: 12px 0;
}

.qty-alert:after {
    content:'';
    position: absolute;
    top: 0%;
    left: 0;
    right: 0;
    margin: 0 auto;
    width: 0;
    height: 0;
    margin-top: -20px;
    border-bottom: solid 20px #F7F7F7;
    border-left: solid 20px transparent;
    border-right: solid 20px transparent;
}

.btn-notify {
  width: 100%;
  display: block;
  padding: 12px 8px 24px 8px;
  text-decoration: underline;
}


//modal for out of stock
.modal {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, .35);
    opacity: 0;
    visibility: hidden;
    transform: scale(1.1); 
    transition: visibility 0s linear 0.25s, opacity 0.25s 0s, transform 0.25s;
    z-index: 1000;
  }
  
.modal-content { 
  position:absolute;
  top: 45%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: white;
  padding: 2em 3em;
  width: 37em;
  border-radius: 8px;
  text-align: left;
}

.close-button {
  position: absolute;
  top:10%;
  right:5%;
  width: 1.5em;
  line-height: 1.5em;
  text-align: center;
  cursor: pointer;
  border-radius: 0.24em;
  background-color: #F0F0F0;
}

.close-button:hover {
  background-color: #A1A1A1;
}

.close-button::selection {
  color: none;
  background: none;
}
 
.show-modal {
  opacity: 1;
  visibility: visible;
  transform: scale(1.0);
  transition: visibility 0s linear 0s, opacity 0.25s 0s, transform 0.25s;
}

.modal-container {
  position: relative;
}

h2#product-title {
  font-size: 30px !important;
}

.modal-content p {
  font-size: 16px !important;
}

.input-email {
  border: 1px solid lightgray;
  width: 100%;
}

.alert {
  width: 100%;
  color: #46AA2F;
  margin-top: .5em;
  background-color: #D3EFCD;
  border-left: 5px solid #46AA2F;
  padding: 10px;
  opacity: 0;
  visibility: hidden;
  position: absolute;
} 

.show-alert {
  opacity: 1;
  visibility: visible;
}

.hide-btn-notify {
  opacity: 0;
  visibility: hidden;
}
  
.alert-close {
  text-decoration: underline;
  cursor: pointer;
  color: #46AA2F !important;
}
  
#btn-notify {
  background-color: #1b1f23;
}

// Accordion style information

.acc__container {
  border-bottom: solid 1px #EBEBEB;
  margin-bottom: 15px;
  text-align: left;
}

.acc__chkbox {
  display: none;
}

.acc__btn {
  border-top: solid 1px #EBEBEB;
  display: block;
  position: relative;
  padding: 16px 0;
  cursor: pointer;
}

.acc__btn h5 {
  margin: 0 !important;
}
.acc__btn h5::selection {
  color: none;
  background: none;
}

// for the buttons
.acc__btn span {
  margin-top: 12px;
}

.acc__btn h5 {
  color: #727272 !important;
  margin: 0;
  text-transform: none !important;
}

.acc__btn span,
.acc__btn span::before {
  content: '';
  position: absolute;
  top: 16px;
  right: 16px;
  width: 16px;
  height: 4px;
  background-color: #727272;
}

.acc__btn span::before {
  transform: rotateZ(90deg);
  width: 16px;
  top: 0;
  left: 0;
}
//End button

.acc__panel {
  //padding-top: 15px;
  opacity: 0;
  visibility: hidden;
  height: 0;
  overflow: hidden;
}

.acc__panel ul li {
  font-family: "Harmonia Sans", sans-serif !important;
  font-size: 14px !important;
  font-weight: normal !important;
  line-height: 20px !important;
  list-style: none;
}

.acc__panel ul li::before {
  content: '\25CF';
  display: inline-block;
  width: 15px;
  margin-left: -15px;
}

.acc__panel ul {
  margin: 0  0 0 15px;
}

.acc__panel p strong a {
  color: #4A80F2 !important;
}

.chk1:checked + .acc__btn + .acc__panel,
.chk2:checked + .acc__btn + .acc__panel{
  padding: 15px 0;
  opacity: 1;
  visibility: visible;
  height: 100%;
}

.chk1:checked + .acc__btn span::before,
.chk2:checked + .acc__btn span::before {
    width: 0;
}

// unique value prop
.prop__container {
  border-top: solid 1px #EBEBEB;
  padding: 24px 0;
  text-align: left; 
}

.prop__container .prop__item {
  list-style: none;
  margin: 0;
}

.prop__container .prop__item li {
  display: flex;
  align-items: center;
}

.prop__container .prop__item li:not(:last-child) {
  margin-bottom: 10px;
}

.prop__container .prop__item li img{
  height: 24px;
  width: 24px;
  margin-right: 16px; 
}

.prop__container .prop__item li p{
  margin: 0 !important;
  font-size: 14px !important;
  line-height: 20px !important;
}

///////////////////////
//HOW TO SECTION

.how-to {
  margin: 60px 0;
  background-color: #BDCBD8;
  padding: 40px 40px 90px 40px;
}

.how-to h3 {
  text-align: center;
  font-size: 40px !important;
  text-transform: uppercase !important;
  color: #231F20 !important;
  padding: 40px 0;
}

.how-to__container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-template-rows: 1fr;
  grid-gap: 20px;
}

.how-to__item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.how-to__text {
  color: #231F20;
  align-self: flex-start;
  display: grid;
  grid-template-columns: repeat(2, auto);
  grid-template-rows: 1fr;
  grid-gap: 10px;
}

.how-to__text span {
  width: 50px;
  height: 50px;
  line-height: 50px;
  border: 2px solid #231F20;
  color: inherit;
  border-radius: 50%;
  text-align: center;
  font-size: 30px;
  font-weight: bold !important;
}

.how-to__text--inner {
  display: flex;
  flex-direction: column;
}

.how-to__text--inner h5,
.how-to__text--inner p {
  margin: 0 !important;
  color: inherit !important;
}

.how-to__text--inner p {
  font-size: 16px !important;
}

.how-to__text--inner h5 {
  font-size: 24px !important;
  font-weight: bold !important;
  padding: 10px 0 5px 0;
}

///////////////////////
//FAQs SECTION

.faq-acc__container {
  text-align: left;
}

.faq-section .grid h3 {
  margin-top: 60px !important;
  padding: 20px 0 !important;
  text-transform: uppercase !important;
}

.faq-acc__checkbox {
  display: none;
} 

.faq-acc__btn { 
  position: relative;
  padding-top: 20px;
  display: inline-block;
  line-height: 0px;
}

.faq-acc__btn h4 {
  font-weight: bold !important;
  font-size: 20px !important;
  color: #231F20 !important;
}

.faq-acc__btn h4::after {
  content: '';
  width: 15px;
  height: 15px;
  display: inline-block;
  background: url({{'arrow-down.svg' | asset_url }});
  background-image: url({{'arrow-down.svg' | asset_url }});
  background-repeat: no-repeat;
  background-size: 15px;
  background-position: center;
  transform: rotate(-90deg);
  margin-left: 20px;
  transition: all 0.3s ease-out;
}

.faq-acc__container .panel {
  text-align: left; 
  visibility: hidden;
  max-height: 0;
  transition: max-height 0.25s ease-in-out, visibility 0s ease-in-out 0.20s;
  overflow: hidden;  
}

.faq-acc__container .panel p {
  font-size: 16px !important;
}

#faqbox-1:checked + .faq-acc__btn + .panel,
#faqbox-2:checked + .faq-acc__btn + .panel,
#faqbox-3:checked + .faq-acc__btn + .panel,
#faqbox-4:checked + .faq-acc__btn + .panel,
#faqbox-5:checked + .faq-acc__btn + .panel,
#faqbox-6:checked + .faq-acc__btn + .panel{
  visibility: visible;
  position: relative; 
  max-height: 300px; 
} 

#faqbox-1:checked + .faq-acc__btn h4::after,
#faqbox-2:checked + .faq-acc__btn h4::after,
#faqbox-3:checked + .faq-acc__btn h4::after,
#faqbox-4:checked + .faq-acc__btn h4::after,
#faqbox-5:checked + .faq-acc__btn h4::after,
#faqbox-6:checked + .faq-acc__btn h4::after{
  transform: rotate(0deg); 
}

